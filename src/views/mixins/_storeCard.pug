//- Template to render the stores list
mixin storeCard(store = {})
  .store
    .store__hero
      .store__actions
        //- TODO : Create the actions to edit, review and share a store
        button soon
      img(src=`/uploads/${store.photo || 'store.png'}`)
      h2.title
        a(href=`/store/${store.slug}`) #{store.name}
    .store__details
      //- take the description and limits to first 25 words
      p= store.description.split(' ').slice(0, 25).join(' ')